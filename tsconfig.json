{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "types" : [ "node", "mocha"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    ".idea/**/*",
    "dist/**/*",
    "tests/**/*",
    "**/**/*.test.ts"
  ]
}
